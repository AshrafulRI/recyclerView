<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/id_imageView"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_subTitle_id"
        app:layout_constraintStart_toEndOf="@id/id_imageView"
        app:layout_constraintTop_toTopOf="@+id/id_imageView" />

    <TextView
        android:id="@+id/tv_subTitle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:text="Sub title"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/id_imageView"
        app:layout_constraintTop_toBottomOf="@id/tv_title_id" />

</androidx.constraintlayout.widget.ConstraintLayout>